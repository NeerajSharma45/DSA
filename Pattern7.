/*
Q.7 Write a Program to print the Solid Half Diamond Number Pattern.	
5
54
543
5432
54321
543210
54321
5432
543
54
5
*/


#include<iostream>
using namespace std;
int main(){
	int n;
	cin>>n;
	for(int i=0;i<n;i++){
		int k=n-1;
		for(int j=0;j<=i&&k>=0;j++){
			cout<<k--;
		}
		cout<<endl;
	}
	for(int i=1;i<n;i++){
		int k=n-1;
		while(k>=i){
			cout<<k--;
		}
		cout<<endl;
	}
	return 0;
}
