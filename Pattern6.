/*
Q.6 Write a Program to print the Full Pyramid Number Pattern.
    1
   321
  54321
 7654321
987654321

*/
#include<iostream>
using namespace std;
int main(){
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
		for(int j=0;j<(n-i);j++){
			cout<<" ";
		}
		int k=2*i-1;
		while(k!=0){
			cout<<k--;
		}
		cout<<endl;
	}
	return 0;
}
